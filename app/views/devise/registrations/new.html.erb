<div class="user-form">
<h3>Sign up</h3>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
<% if resource.errors.any? %>
 <div id="error_explanation">
        <div class="alert alert-danger">
        <ul>
            <% if resource.errors[:email].any? %>
              <li><%= resource.errors[:email].join %></li>
            <% end %>
            <% if resource.errors[:name].any? %>
              <li><%= resource.errors[:name].join %></li>
            <% end %>
            <% if resource.errors[:password].any? %>
              <li><%= resource.errors[:password].join %></li>
            <% end %>
            <% if resource.errors[:accept].any? %>
              <li><%= resource.errors[:accept].join %></li>
            <% end %>
        </ul>
     </div>
     </div>
     <% end %>

  <div class="field">
    <%= f.email_field :email, autofocus: true, placeholder: 'Email' %>
  </div>

  <div class="field">
    <%= f.text_field :name, placeholder: 'Name'%>
  </div>  

  <div class="field">
    <%= f.password_field :password, autocomplete: "off", placeholder: 'Password' %>
  </div>

   <div class="accept-checkbox">
      <%= f.check_box :accept, class: 'form-check-input accept' %>
      <div class='form-check-label'>I have read and accept the <div class="sign-up-links"><%= link_to(' Privacy Policy', privacy_path) %></div> and <div class="sign-up-links"><%= link_to(' Terms of Use', terms_path) %></div></div>
  </div>

  <div class="actions">
    <%= f.submit "Create account", class: 'register' %>
  </div>

  <div class="links">
  <%= link_to("Already have an account? Log in", login_path) %>
  </div>
  <%= image_tag('bg.jpg', class:'bg-img') %>
<% end %>

</div>


