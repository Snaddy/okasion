<% if flash.now[:notice] %>
<div class="messages">
    <div class="alert alert-info">
    	<%= flash[:notice] %>
    </div>
</div>
<% end %>

<div class="profile">

<div class="info">
	<strong>Name: </strong><%= @name %><br>
	<strong>City: </strong><%= @city %><br>
<div>
	<% if !@user.provider? %>
		<%= link_to edit_password_path, class: 'btn btn-primary' do%>
	 		Edit Password
	 	<% end %>
	<% end %>

	<%= link_to edit_user_path, class: 'btn btn-primary' do%>
 		Edit Profile
 	<% end %>
</div>
</div>

<div class="feed">
<hr>

<div class="events">
	<%= render @events %>
</div>

<% if @events.count == 0 %>

	<div class='no-results'>You haven't posted any events yet</div>

<% end %>

<div class="pagination">
	<%= will_paginate @events %>
</div>

<% if @events.next_page %>
	<div id="load-more-posts" class="btn btn-primary"> Load more...</div>
<% end %> 
</div>
</div>